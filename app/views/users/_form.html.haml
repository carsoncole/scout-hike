- if @user.errors.any?
  #error_explanation
    .message= "Ouch! Some bad stuff stopped me from creating your account:"
    %ul
      - @user.errors.full_messages.each do |message|
        %li= message

.form-group
  = form.label :screenname
  %small.text-muted This is what others will see on the Leaderboard
  = form.text_field :screenname, class: 'form-control'

.form-group
  = form.label :unit
  = form.collection_select :unit_id, Unit.all, :id, :name, { prompt: 'Select your Unit'} , {class: 'form-control'}

.form-group
  = form.label :email
  / %small.text-muted Optional. For Leaderboard updates, password resets.
  = form.text_field :email, type: 'email', class: 'form-control'

.form-group
  = form.label :password
  = form.password_field :password, class: 'form-control'
