%nav.navbar.navbar-expand-lg.navbar-dark.bg-dark#main-nav
  = link_to root_path, class: 'navbar-brand' do
    = image_tag "hike-simple.png", width: '40', class: 'img-fluid'
  %button.navbar-toggler(type='button' data-toggle="collapse" data-target="#navbarNav")
    %span.navbar-toggler-icon
  %div.collapse.navbar-collapse#navbarNav
    %ul.navbar-nav.mr-auto
    /   %li.nav-item
    /     = link_to "Leaderboard", root_path, class: 'nav-link'
    / %li.nav-item
    /   = link_to "About", about_path, class: 'nav-link'
    .navbar-nav.mr-0

      - if signed_in?
        .nav-item
          .nav-link= link_to current_user.screenname, edit_user_path(current_user), class: 'screenname'
      - else
        .nav-item
          = link_to "Sign in", sign_in_path, class: 'nav-link'
        .nav-item
          = link_to "Sign up", sign_up_path, class: 'nav-link'
      - if signed_in?
        .nav-item
          = link_to "Sign out", sign_out_path, method: :delete, class: 'nav-link'
